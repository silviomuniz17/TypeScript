//essa é a configuração minimas, não errar
{
    //  nessas configurações vamos compilar
    "compilerOptions": {
      //    onde vai salvar os arquivos js depois de criado
      "outDir": "app/dist/js",
      //    para passar a versão do que vai ser vonvertido o typescript para o javaScript
      "target": "ES6",
      // esse codigo é para não gerar o arquivo js quando tiver arro no arquivo typescript
      "noEmitOnError": true,
      //para que meu codigo não adote de cara todas as variaveis como tipo any pra não dar problema mais para frente
      "noImplicitAny": true,
      //esse codigo é para quando eu inserir um comentario não converter tbm para .JS assim meu arquivo fica menor e mais leve
      "removeComments": true,
      //essa configuração é para deixar o meu codigo mais seguro assim ele não vai permitir que eu atribua um valor nulo para que no futuro de erro assim trataria p problema antes
      "strictNullChecks": true,
      // avisando o typeScript que vou utilizar o decorators
      "experimentalDecorators": true,
    },
    //  onde vai ficar os arquivos que gostaria que faça a leitura para a conversão
    "include": [
      //    toda a pasta app e subipastas
      "app/src/**/*"
    ]
  }